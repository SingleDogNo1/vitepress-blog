{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist"
  ],
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "ignoreDeprecations": "5.0"
  }
}