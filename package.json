{
  "name": "zcm-blog",
  "version": "0.0.0",
  "private": true,
  "description": "个人博客&知识&文档站集",
  "devDependencies": {
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vueuse/core": "^10.5.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vue": "^3.3.4"
  },
  "scripts": {
    "dev": "pnpm --filter blogpress dev",
    "serve": "pnpm --filter blogpress serve",
    "build": "pnpm --filter blogpress build",
    "setup": "pnpm build:theme && pnpm build:markdown-preview && pnpm build:live2d",
    "build:theme": "pnpm --filter @singledog/theme build",
    "build:markdown-preview": "pnpm build:vue-repl && pnpm build:vue-preview-plugin",
    "build:vue-repl": "pnpm --filter @singledog/vue-repl prepublishOnly",
    "build:vue-preview-plugin": "pnpm --filter @singledog/vue-preview-plugin build",
    "build:live2d": "pnpm --filter @singledog/live2d-widget build",
    "bootstrap": "pnpm clean:cache && pnpm clean:blogpress && pnpm clean:theme && pnpm clean:markdown-preview && pnpm clean:live2d && pnpm install",
    "clean:cache": "rimraf pnpm-lock.yaml && rimraf node_modules",
    "clean:blogpress": "pnpm --filter blogpress clean",
    "clean:theme": "pnpm --filter @singledog/theme clean",
    "clean:markdown-preview": "pnpm clean:vue-repl && pnpm clean:vue-preview-plugin",
    "clean:vue-repl": "pnpm --filter @singledog/vue-repl clean",
    "clean:vue-preview-plugin": "pnpm --filter @singledog/vue-preview-plugin clean",
    "clean:live2d": "pnpm --filter @singledog/live2d-widget clean"
  },
  "keywords": [],
  "author": "singleDogNo.1",
  "license": "MIT"
}